# .lintr configuration for FunctionReport package
# This file configures the lintr package for R code linting

linters <- with_defaults(
  # Line length: 120 characters
  line_length_linter(120),
  
  # Indentation: 2 spaces
  indentation_linter(indent = 2),
  
  # Object usage linter
  object_usage_linter,
  
  # Assignment linter (prefer <- over =)
  assignment_linter,
  
  # Spaces before left parentheses
  spaces_left_parentheses_linter,
  
  # Spaces after left parentheses
  spaces_right_parentheses_linter,
  
  # Spaces after commas
  commas_linter,
  
  # Trailing whitespace
  trailing_whitespace_linter,
  
  # Trailing blank lines
  trailing_blank_lines_linter,
  
  # Opening curly braces on same line
  open_curly_linter,
  
  # Closing curly braces on new line
  close_curly_linter,
  
  # Parentheses in function calls
  paren_brace_linter,
  
  # Infix operators spacing
  infix_spaces_linter,
  
  # No spaces around pipe operators
  pipe_continuation_linter,
  
  # Commented code
  commented_code_linter,
  
  # T and F instead of TRUE and FALSE
  absolute_paths_linter,
  
  # Cyclical complexity
  cyclocomp_linter,
  
  # Function length
  function_length_linter(length = 50),
  
  # Object name length
  object_length_linter(length = 30),
  
  # No camelCase
  camelCase_linter,
  
  # No snake_case
  snake_case_linter,
  
  # Multiple statements per line
  multiple_statements_linter,
  
  # No unnecessary parentheses
  unnecessary_assignment_linter,
  
  # No unreachable code
  unreachable_code_linter,
  
  # No boolean arithmetic
  boolean_arithmetic_linter,
  
  # No literal coercion
  literal_coercion_linter,
  
  # No package attach
  package_attach_linter,
  
  # No namespace conflicts
  namespace_linter,
  
  # No non-local assignment
  non_local_assignment_linter,
  
  # No unneeded concatenation
  unneeded_concatenation_linter,
  
  # No seq usage
  seq_linter,
  
  # No paste usage
  paste_linter,
  
  # No TODO comments
  todo_comment_linter,
  
  # No FIXME comments
  fixme_comment_linter
)

# Exclude testthat tests from certain linters
exclusions <- list(
  "tests/testthat" = list(
    "line_length_linter",
    "object_length_linter",
    "function_length_linter"
  )
)

# Exclude specific files
exclude <- list(
  "data-raw/",
  "vignettes/"
)